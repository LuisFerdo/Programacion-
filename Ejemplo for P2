// Ejemplofor.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

void main()
{
	int S, n;
	// Valida que se ingresen datos correctos
	do {
		cout << "Ingrese el nÃºmero de elementos a: ";
		cin >> n;
	   } while (n<=0);
	   // Inicializar el acumuludor de suma
	   S=0;
	   for (int i=2; i<=n; i=i+2)
	       S=S+i; 
	   cout << "La suma de la serie es: " << S;
	   getch();
}
