//Cuerpo del programa
void main()
{
	int n;
	bool sies;
	cout << "Ingresar el numero: ";
	cin >> n;
	sies=paroimpar(n); //Llamar a la funci贸n
	if (sies)
		cout << "Es par";
	else
		cout << "Es impar";
	getch();
}

//Declaraci贸n de la funci贸n
bool paroimpar(int numero)
{
	bool aux; //Se utiliza un auxiliar del mismo tipo de la funci贸n
	if (numero%2==0)
		aux=true;
	else
		aux=false;
	return aux; //Retorna el valor
}
